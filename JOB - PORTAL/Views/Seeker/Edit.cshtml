@model JOB___PORTAL.Models.Seeker

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Your Profile</h1>
<div class="alert-info">
    @TempData["Message"]
    @ViewBag.Message
</div>
<h4>Seeker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Password" />
            <input type="hidden" asp-for="SeekerProfilePic" />
            <input type="hidden" asp-for="SeekerCVFile" />
           @*  <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactInfo" class="control-label"></label>
                <input asp-for="ContactInfo" class="form-control" />
                <span asp-validation-for="ContactInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityQuestion" class="control-label"></label>
                <select asp-for="SecurityQuestion" class="form-control">
                    <option>What is your date of birth?</option>
                    <option>What was your first Name?</option>
                    <option>What’s your favorite movie?</option>
                </select>
                <span asp-validation-for="SecurityQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityAnswer" class="control-label"></label>
                <input asp-for="SecurityAnswer" class="form-control" />
                <span asp-validation-for="SecurityAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeekerProfilePic" class="control-label"></label>
                <input asp-for="SeekerProfilePicPath" class="form-control" accept=".png,.jpg,.jpeg" />
                <img src="~/SeekerProfilePic/@Model.SeekerProfilePic" height="100" width="100" class="rounded-circle" />
                <span asp-validation-for="SeekerProfilePic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeekerCVFile" class="control-label"></label>
                <input asp-for="SeekerCVFilePath" class="form-control" accept=".pdf,.docx,.doc" />
                <a href="~/SeekerCVFile/@Model.SeekerCVFile" target="_blank" class="btn btn-outline-success">Your CV</a>
                <span asp-validation-for="SeekerCVFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Your_Profile" class="btn btn-outline-primary">Back to Your Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
