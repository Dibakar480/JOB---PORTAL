@model IEnumerable<JOB___PORTAL.Models.Seeker>

@{
    ViewData["Title"] = "ShowSeeker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Seeker</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
       
            <th>
                @Html.DisplayNameFor(model => model.SeekerProfilePic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeekerCVFile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
      
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
      
            <td>
                @* @Html.DisplayFor(modelItem => item.SeekerProfilePic) *@
                    <img src="~/SeekerProfilePic/@item.SeekerProfilePic" height="100" width="100" class=" rounded-circle" />
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.SeekerCVFile) *@
                    <a href="~/SeekerCVFile/@item.SeekerCVFile" target="_blank">Show CV</a>
            </td>
            <td>
        
            </td>
        </tr>
}
    </tbody>
</table>
