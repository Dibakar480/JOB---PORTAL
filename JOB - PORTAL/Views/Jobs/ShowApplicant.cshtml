@model IEnumerable<JOB___PORTAL.Models.Seeker>

@{
    ViewData["Title"] = "ShowApplicant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Applicants</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
        
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
       
                @Html.DisplayNameFor(model => model.SeekerProfilePic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeekerCVFile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
      
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
       
            <td>
               @*  @Html.DisplayFor(modelItem => item.SeekerProfilePic) *@
                    <img src="~/SeekerProfilePic/@item.SeekerProfilePic" height="100" width="100" class=" rounded-circle" />
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.SeekerCVFile) *@
                    <a href="~/SeekerCVFile/@item.SeekerCVFile" target="_blank" class="btn btn-outline-primary">Show CV</a>
            </td>
            <td>
                  @*   <a asp-action="Edit" asp-route-id="@item.Email" class="btn btn-outline-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Email">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Email">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
